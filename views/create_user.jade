extends ./layout.jade

block header

block content
  form.create-user-form(action="/admin/user-account/create" data-abide="" method="post")
    fieldset
      legend #{title}

      .username
        label Username:
          input(type="text" name="username" placeholder="Username" value="#{username}" required="")
        small.error Username is required.

      .password
        label Password:
          input(type="password" id="password" name="password" placeholder="Password" required="")
        small.error Password is required.

      .password-confirm
        label Confirm Password:
          input(type="password" name="confirmPassword" placeholder="Password" required="" data-equalto="password")
        small.error The Passwords must match.

      .submit
        input.button.radius.success(type="submit" value="Save")
        a.button.radius.secondary(href="/admin/users") Cancel