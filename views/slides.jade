extends ./layout.jade

block content
  h2.title #{title}

  a.button.radius(href="/admin/slide-deck/create") Create New Slide Deck

  ul.slide-decks.no-bullet
    each slideDeck, route in slides
      li.panel.radius
        h3
          a(href='/admin/slides#{route}') Edit #{slideDeck.title}
        p #{slideDeck.summary}