extends ./layout.jade

block content
  h2.title #{title}

  div
    a.button.border.icon-button.radius(href="/admin/slide-deck/create")
      i.fi-page-add
      |Create Deck

  ul.slide-decks.no-bullet
    each slideDeck, route in slides
      li.panel.radius
        h3
          a(href='/admin/slides#{route}') Edit #{slideDeck.title}
        p #{slideDeck.summary}